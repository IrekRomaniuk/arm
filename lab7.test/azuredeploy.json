{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "vm": {
            "type": "object",
            "defaultValue": {
                "name": "myUbuntuVM",
                "dns": "",
                "ubuntuVersion": "16.04.0-LTS",
                "numberOfDataDisks": 2
            }
        },
        "vnet": {
            "type": "object",
            "defaultValue": {
                "name": "HugoAndCat",
                "prefix": [
                    "10.0.0.0/16"
                ],
                "subnets": [
                    {
                        "name": "production",
                        "prefix": "10.0.0.0/24"
                    }
                ]
            }
        },
        "adminuser": {
            "type": "string",
            "defaultValue": "richeney"
        },
        "keyVault": {
            "type": "secureObject",
            "defaultValue": {
                "resourceGroup": "keyVaults",
                "name": "richeneyKeyVault",
                "secret": "ubuntuDefaultPassword"
            }
        }
    },
    "variables": {
        "vmUri": "[uri(deployment().properties.templateLink.uri, 'vm.json')]",
        "keyVaultId": "[resourceId(parameters('keyVault').resourceGroup, 'Microsoft.KeyVault/vaults', parameters('keyVault').name)]"
    },
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "[parameters('vm')]",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "parameters": {
                    "vm": {
                        "value": "[parameters('vm')]"
                    },
                    "vnet": {
                        "value": "[parameters('vnet')]"
                    },
                    "adminUser": {
                        "value": "[parameters('adminuser')]"
                    },
                    "adminPassword": {
                        "reference": {
                            "keyVault": {
                                "id": "[variables('keyVaultId')]"
                            },
                            "secretName": "[parameters('keyVault').secret]"
                        }
                    }
                },
                "templateLink": {
                    "uri": "[variables('vmUri')]",
                    "contentVersion": "1.0.1.0"
                }
            }
        }
    ],
    "outputs": {}
}