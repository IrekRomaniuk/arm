{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
      "hub": {
          "type": "object",
          "defaultValue": {
              "resourceGroup": "core",
              "vnet": { "name": "core", "addressPrefixes": [ "10.0.0.0/16" ] },
              "subnets": [
                  { "name": "GatewaySubnet", "addressPrefix": "10.0.0.0/24" },
                  { "name": "outside", "addressPrefix": "10.0.1.0/24" },
                  { "name": "inside", "addressPrefix": "10.0.2.0/24" },
                  { "name": "shared", "addressPrefix": "10.0.3.0/24" }
              ],
              "createGateway": true,
              "gatewaySku": "VpnGw1"
          },
          "metadata": { 
              "description": "Hub object.  See defaultValue for expected content example."
          }
      },
      "spokes": {
          "type": "array",
          "defaultValue": [
              {
                  "resourceGroup": "spoke-crm",
                  "vnet": { "name": "crm", "addressPrefixes": [ "10.1.0.0/16"  ] },
                  "subnets": [
                      { "name": "presentation", "addressPrefix": "10.1.0.0/24" },
                      { "name": "application", "addressPrefix": "10.1.1.0/24" },
                      { "name": "business", "addressPrefix": "10.1.2.0/24" },
                      { "name": "data", "addressPrefix": "10.1.3.0/24" }
                  ]
              },
              {
                  "resourceGroup": "spoke-test",
                  "vnet": { "name": "test", "addressPrefixes": [ "10.76.0.0/16" ] },
                  "subnets": [
                      { "name": "subnet1", "addressPrefix": "10.76.0.0/24" },
                      { "name": "subnet2", "addressPrefix": "10.76.1.0/24" }
                  ]
              }
          ],
          "metadata": {
              "description": "Array of spoke objects"
          }
      }
  },
  "variables": {
    "hubUrl": "[uri(deployment().properties.templateLink.uri, 'vnet-hub.json')]",
    "spokeUrl": "[uri(deployment().properties.templateLink.uri, 'vnet-spoke.json')]"          
  },
  "resources": [
    {
      "name": "hubDeployment",
      "type": "Microsoft.Resources/deployments",
      "apiVersion": "2017-05-10",
      "resourceGroup": "[parameters('hub').resourceGroup]",
      "properties": {
        "mode": "Incremental",
        "parameters": {
          "vnetName": {
              "value": "[parameters('hub').vnet.name]"
          },
          "vNetAddressPrefixes": {
              "value": "[parameters('hub').vnet.addressPrefixes]"
          },
          "subnets": {
              "value": "[parameters('hub').subnets]"
          },
          "createGateway": {
              "value": "[parameters('hub').createGateway]"
          },
          "gatewaySku": {
              "value": "[parameters('hub').gatewaySku]"
          }
        },
        "templateLink": {
          "uri": "[variables('hubUrl')]",
          "contentVersion": "1.0.0.0"
        }
      }
    },
    {
        "name": "[concat('spoke', copyIndex(1), 'Deployment')]",
        "type": "Microsoft.Resources/deployments",
        "apiVersion": "2017-05-10",
        "resourceGroup": "[parameters('spoke')[copyIndex()].resourceGroup]",
        "properties": {
          "mode": "Incremental",
          "parameters": {
            "peer": {
                "value": true
            },
            "hub": {
                "value": "[parameters('hub')]"
                }
            },
            "spoke": {
                "value": "[parameters('spokes')[copyIndex()]]"
                }
            }
          },
          "templateLink": {
            "uri": "[variables('hubUrl')]",
            "contentVersion": "1.0.0.0"
          }
        }
      }
  ],
  "outputs": {
      "vpnGatewayIpAddress": {
        "type": "string",
        "value": "[reference('hubDeployment').outputs.vpnGatewayIpAddress.value]"
    }

  }
}